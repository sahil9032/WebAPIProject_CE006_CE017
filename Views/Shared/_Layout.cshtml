<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="~/Scripts/ckeditor/ckeditor.js"></script>
    <script src="~/Scripts/ckfinder/ckfinder.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-sm fixed-top navbar-light bg-light">
        <div class="container">
            @Html.ActionLink("Discussion Forum", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarText">
                <ul class="nav navbar-nav mr-auto">
                    <li class="nav-item"><a href="/" class="nav-link">Home</a></li>
                    @if (Session["token"] != null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Create post", "Create", "Post", new { area = "" }, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("My posts", "Index", "Post", new { area = "" }, htmlAttributes: new { @class = "nav-link" })
                        </li>
                    }
                    <li class="nav-item"><a href="/Home/About" class="nav-link">About</a></li>
                    <li class="nav-item"><a href="/Home/Contact" class="nav-link">Contact</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["token"] == null)
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Login", "Login", "Users", new { area = "" }, htmlAttributes: new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Register", "Register", "Users", new { area = "" }, htmlAttributes: new { @class = "nav-link" })
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Log out (" + Session["username"] + ")", "Logout", "Users", new { area = "" }, htmlAttributes: new { @class = "nav-link text-danger" })
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <br/>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer >
            <p>&copy; @DateTime.Now.Year - Discussion Forum</p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
